<%= form_with model: @cart, data: { controller: "cart-item" } do |form| %>
  <div class="flex items-center bg-gray-100 rounded-md overflow-hidden w-32">
    <button type="button"
      class="flex-1 px-3 py-2 hover:bg-gray-200 text-gray-700 font-medium text-lg transition-colors"
      data-action="cart-item#decrement">
      -
    </button>
    
    <%= form.number_field :quantity, value: 1, min: 1,
      class: "flex-1 w-full py-2 font-bold text-center border-0 focus:ring-0 focus:outline-none text-gray-700 [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none",
      data: { cart_item_target: "input" } %>
    
    <button type="button"
      class="flex-1 px-3 py-2 hover:bg-gray-200 text-gray-700 font-medium text-lg transition-colors"
      data-action="cart-item#increment">
      +
    </button>
  </div>
<% end %>