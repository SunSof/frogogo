<% if @cart.cart_items.any? %>
  <div class="max-w-lg mx-auto">
    <div class="flex justify-between mb-6">
      <h1 class="text-2xl font-medium text-black-800 flex-grow">Корзина</h1>
      <button class="text-gray-500 hover:text-gray-700">Очистить корзину</button>
    </div>
  
    <div class="space-y-4">
      <% @cart.cart_items.each do |cart_item| %> 
        <div class="flex items-center justify-between border-b pb-4">
          <div class="flex items-center">
            <div class="ml-4">
              <p class="text-sm text-gray-500">картинка</p>
              <h3 class="font-semibold text-lg"><%= cart_item.product.name %></h3>
              <%= render 'carts/buttons' %>
              <p class="text-sm text-gray-500"><%= cart_item.subtotal %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6 flex justify-between items-center">
      <p class="text-lg font-semibold">Сумма заказа</p>
      <p class="text-lg font-semibold"><%= current_cart.total %></p>
    </div>
  </div> 
<% else %>
  <%= render 'carts/empty_cart' %>
<% end %>
