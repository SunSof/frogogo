<div id="cart_item_<%= cart_item.id %>" class="flex bg-gray-100 rounded-md overflow-hidden w-32">
  <%= button_to "-", cart_item_path(cart_item), method: :patch, remote: true,
        params: { quantity: cart_item.quantity - 1 },
        form: { data: { turbo_frame: "cart_item_#{cart_item.id}" } },
        class: "flex-1 px-3 py-2 hover:bg-gray-200 text-gray-700 font-medium text-lg transition-colors" %>
  <span class="flex-1 w-full py-2 font-bold text-center text-gray-700">
    <%= cart_item.quantity %>
  </span>
  <%= button_to "+", cart_item_path(cart_item), method: :patch, remote: true,
        params: { quantity: cart_item.quantity + 1 },
        form: { data: { turbo_frame: "cart_item_#{cart_item.id}" } },
        class: "flex-1 px-3 py-2 hover:bg-gray-200 text-gray-700 font-medium text-lg transition-colors" %>
</div>
